# FDA NDC to RxNorm Matching Agent Configuration

# Database settings
DATABASE_URL=sqlite:///./data/ndc_rxnorm.db
DATABASE_ECHO=false

# API settings
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=false

# Processing settings
